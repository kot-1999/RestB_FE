doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title SuperAdmin Dashboard - RestBoo
    link(rel="stylesheet", href="/assets/css/style.css")
  
  body(data-requires-auth)
    header
      include ../partials/header.pug
    
    main
      .admin-dashboard
        .dashboard-header
          h1 SuperAdmin Dashboard
          p Welcome back! Here's your system overview.
        
        .dashboard-stats
          .stat-card
            .stat-icon üè™
            .stat-value(id="totalRestaurants") 0
            .stat-label Total Restaurants
          .stat-card
            .stat-icon üìÖ
            .stat-value(id="totalBookings") 0
            .stat-label Total Bookings
          .stat-card
            .stat-icon ‚è≥
            .stat-value(id="pendingBookings") 0
            .stat-label Pending Bookings
          .stat-card
            .stat-icon üë•
            .stat-value(id="totalStaff") 0
            .stat-label Total Staff
          .stat-card
            .stat-icon üè∑Ô∏è
            .stat-value(id="totalBrands") 0
            .stat-label Total Brands
          .stat-card
            .stat-icon üí∞
            .stat-value(id="todayRevenue") $0
            .stat-label Today's Revenue
        
        .dashboard-content
          .dashboard-section
            .section-header
              h2 Recent Bookings
              a.btn-secondary(href="/views/pages/admin-bookings.html") View All
            .recent-bookings
              .loading-indicator(id="recentBookingsLoading")
                p Loading recent bookings...
          
          .dashboard-section
            .section-header
              h2 Pending Approvals
              a.btn-secondary(href="/views/pages/admin-bookings.html?filter=pending") View All
            .pending-approvals
              .loading-indicator(id="pendingApprovalsLoading")
                p Loading pending approvals...
          
          .dashboard-section
            .section-header
              h2 System Alerts
            .system-alerts
              .alert-item.info
                .alert-icon ‚ÑπÔ∏è
                .alert-content
                  h4 System Update Available
                  p A new system update is available. Please review and schedule maintenance.
              .alert-item.warning
                .alert-icon ‚ö†Ô∏è
                .alert-content
                  h4 High Booking Volume
                  p Booking volume is 150% higher than usual. Consider adding more staff.
              .alert-item.success
                .alert-icon ‚úÖ
                .alert-content
                  h4 Daily Goal Achieved
                  p Today's booking target has been achieved. Great job!
        
        .quick-actions
          h3 Quick Actions
          .action-grid
            .action-item
              a.btn-primary(href="/views/pages/admin-brands.html") Manage Brands
            .action-item
              a.btn-primary(href="/views/pages/admin-restaurants.html") Manage Restaurants
            .action-item
              a.btn-primary(href="/views/pages/admin-staff.html") Manage Staff
            .action-item
              a.btn-primary(href="/views/pages/admin-bookings.html") Manage Bookings
            .action-item
              a.btn-secondary(href="/views/pages/admin-settings.html") System Settings
            .action-item
              a.btn-secondary(href="/views/pages/admin-reports.html") View Reports
    
    include ../partials/footer.pug
    
    script(src="/assets/js/config.js")
    script(src="/assets/js/utils/storage.js")
    script(src="/assets/js/utils/ui.js")
    script(src="/assets/js/utils/api.js")
    script(src="/assets/js/utils/auth.js")
    script(src="/assets/js/utils/access-control.js")
    script(src="/assets/js/main.js")
    script(src="/assets/js/admin-dashboard.js")
