doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title RestB - Restaurant Booking
    link(rel="stylesheet", href="/assets/css/style.css")
  
  body
    header
      include ../partials/header.pug
    
    main
      .landing
        // Content for non-authenticated users
        .landing-content(data-auth-required="false")
          h1 Welcome to RestB
          p Restaurant booking made simple
          
          .login-section
            a(href="/views/pages/login.html" class="login-btn") Login
            |  
            a(href="/views/pages/register.html" class="login-btn") Register
        
        // Content for authenticated users
        .user-landing(data-auth-required="true" style="display: none;")
          .welcome-section
            h1 Welcome back, 
              span.user-welcome-name Guest
            p What would you like to do today?
            
            .action-cards
              if AuthService && AuthService.isCustomer()
                .action-card
                  h3 Browse Restaurants
                  p Discover amazing restaurants in your area
                  a.btn-primary(href="/views/pages/customer-dashboard.html") Go to Dashboard
                
                .action-card
                  h3 My Bookings
                  p View and manage your restaurant reservations
                  a.btn-secondary(href="/views/pages/customer-dashboard.html#bookings") View Bookings
              
              if AuthService && AuthService.isPartner()
                .action-card
                  h3 Restaurant Management
                  p Manage your restaurant details and menu
                  a.btn-primary(href="/views/pages/admin-dashboard.html") Manage Restaurant
                
                .action-card
                  h3 Bookings Overview
                  p View and manage customer reservations
                  a.btn-secondary(href="/views/pages/admin-dashboard.html#bookings") View Bookings
                
                .action-card
                  h3 Staff Management
                  p Manage your restaurant staff and permissions
                  a.btn-secondary(href="/views/pages/admin-dashboard.html#staff") Manage Staff
    
    include ../partials/footer.pug
    
    script(src="/assets/js/config.js")
    script(src="/assets/js/utils/storage.js")
    script(src="/assets/js/utils/ui.js")
    script(src="/assets/js/utils/api.js")
    script(src="/assets/js/utils/auth.js")
    script(src="/assets/js/utils/access-control.js")
    script(src="/assets/js/main.js")
