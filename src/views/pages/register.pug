extends ../layouts/base.pug

block head
  title Register - RestB

block content
  .register-container
    .register-form
      h2 Register for RestB

      .user-type-selector
        .user-type-tabs
          button.user-type-tab.active(type="button" data-type="user") Customer Registration
          button.user-type-tab(type="button" data-type="partner") Partner Registration

      form
        input(type="hidden" id="userType" name="userType" value="user")

        .form-group
          label(for="firstName") First Name
          input(type="text" id="firstName" name="firstName" required placeholder="Enter your first name" minlength="2" maxlength="255")

        .form-group
          label(for="lastName") Last Name
          input(type="text" id="lastName" name="lastName" required placeholder="Enter your last name" minlength="2" maxlength="255")

        .form-group
          label(for="email") Email
          input(type="email" id="email" name="email" required placeholder="Enter your email")

        .form-group
          label(for="password") Password
          input(type="password" id="password" name="password" required placeholder="Create a password" minlength="3")

        button.register-submit(type="submit") Register

        .register-links
          a(href="/views/pages/login") Already have an account? Login
          | â€¢ 
          a(href="/") Back to Home

block scripts
  script(src="/assets/js/register.js")
