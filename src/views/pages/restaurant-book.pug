extends ../layouts/base.pug

block head
  title Restaurant - RestB

block content
  .restaurant-book
    .rb-card
      // Header section (image + basic info)
      .rb-hero
        img.rb-hero-img(src="/assets/img/restaurant2.jpg" alt="Restaurant")
        .rb-hero-info
          h1#rb-name Sakura Sushi
          p#rb-tags Japanese ‚Ä¢ Sushi ‚Ä¢ Ramen
          p#rb-location üìç Tallaght

      // Booking section (on same page)
      .rb-booking
        h2 Confirm Booking

        .rb-row
          .rb-field
            label(for="rb-date") Date
            input#rb-date(type="date")

          .rb-field
            label Guests
            input#rb-guests(type="number" min="1" value="2")

        h3 Available Times
        .rb-times
          button.time-slot(type="button" data-time="17:00") 17:00
          button.time-slot(type="button" data-time="18:00") 18:00
          button.time-slot(type="button" data-time="19:00") 19:00
          button.time-slot(type="button" data-time="20:00") 20:00

        button#rb-confirm.rb-btn(type="button" disabled) Confirm Booking

        p#rb-msg.rb-msg

block scripts
  script(src="/assets/js/restaurant-book.js")
