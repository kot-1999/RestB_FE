block head
  title Restaurants - RestB

block content
  .restaurants-page
    // HERO / BANNER
    section.rest-hero
      .rest-hero-inner
        h1 Find & Book your Perfect table
        p Discover restaurants and make instant reservations
        form.rest-search(action="/views/pages/restaurants" method="get")
          input#q(type="search" name="q" placeholder="Search restaurants, cuisine, brand..." autocomplete="off")
          button(type="submit" aria-label="Search") üîç

    // FILTER / SORT BAR
    section.rest-filters
      .filters-inner
        .filter-group
          label(for="sort") Sort by
          select#sort(name="sort")
            option(value="") None
            option(value="rating") Rating (high ‚Üí low)
            option(value="distance") Distance (near ‚Üí far)
            option(value="availability") Availability (most)

        .filter-group
          label(for="distance") Location (distance)
          select#distance(name="distance")
            option(value="") Any distance
            option(value="2") Within 2km
            option(value="5") Within 5km
            option(value="10") Within 10km
            option(value="20") Within 20km
            option(value="50") Within 50km

        .filter-group
          label(for="date") Date
          input#date(type="date" name="date")

        .filter-group
          label(for="category") Category
          select#category(name="category")
            option(value="") Any
            option(value="italian") Italian
            option(value="japanese") Japanese
            option(value="steakhouse") Steakhouse
            option(value="indian") Indian
            option(value="mexican") Mexican
            option(value="thai") Thai
            option(value="vegan") Vegan
            option(value="seafood") Seafood
            option(value="brunch") Brunch

