extends ../layouts/base.pug

block head
  title Restaurants - RestB

block content
  .restaurants-page
    // HERO / BANNER
    section.rest-hero
      .rest-hero-inner
        h1 Find & Book your Perfect table
        p Discover restaurants and make instant reservations
        form.rest-search(action="/views/pages/restaurants" method="get")
          input#q(type="search" name="q" placeholder="Search restaurants, cuisine, location..." autocomplete="off")
          button(type="submit" aria-label="Search") üîç

    // FILTER / SORT BAR (UI only for now)
    section.rest-filters
      .filters-inner
        .filter-group
          label(for="sort") Sort by
          select#sort(name="sort")
            option(value="") Recommended
            option(value="rating") Rating
            option(value="distance") Distance
            option(value="availability") Available at once

        .filter-group
          label(for="location") Location
          select#location(name="location")
            option(value="") Any
            option Dublin City Centre
            option Tallaght
            option Blanchardstown

        .filter-group
          label(for="date") Date
          input#date(type="date" name="date")

        .filter-group
          label(for="category") Category
          select#category(name="category")
            option(value="") Any
            option Italian
            option Japanese
            option Steakhouse

    // CARDS GRID
    section.rest-results
      .cards-grid
        // CARD 1
        article.restaurant-card
          .card-img
            img(src="/assets/img/restaurant1.JPG" alt="Bella Italia food")
