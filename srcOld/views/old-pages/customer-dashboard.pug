doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Customer Dashboard - RestB
    link(rel="stylesheet", href="/assets/css/styles.css")
  
  body(data-requires-auth)
    header
      include ../partials/header
    
    main
      .dashboard-container
        h1 Customer Dashboard
        
        .dashboard-welcome
          p Welcome to your RestB Dashboard!
        
        .dashboard-menu
          h2 Quick Actions
          .menu-grid
            .menu-item
              h3 Bookings
                button(data-permission="view_own_bookings") My Bookings
                button(data-permission="create_booking") Create Booking
            .menu-item
              h3 Profile
                button(data-permission="update_own_profile") My Profile
        
        .user-info
          h3 Current User
          .user-details
            p Name: 
              span#user-name Loading...
            p Email: 
              span#user-email Loading...
            p Account Type: 
              span#user-type Loading...
    
    include ../partials/footer
    
    script(src="/assets/js/config.js")
    script(src="/assets/js/utils/storage.js")
    script(src="/assets/js/utils/ui.js")
    script(src="/assets/js/utils/api.js")
    script(src="/assets/js/utils/auth.js")
    script(src="/assets/js/utils/access-control.js")
    script(src="/assets/js/main.js")
    script(src="/assets/js/dashboard.js")
