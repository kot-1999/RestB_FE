doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Staff Dashboard - RestBoo
    link(rel="stylesheet", href="/assets/css/styles.css")
  
  body(data-requires-auth)
    header
      include ../partials/header
    
    main
      .staff-dashboard
        .dashboard-header
          h1 Staff Dashboard
          p Welcome back! Here's your restaurant overview.
        
        .dashboard-stats
          .stat-card
            .stat-icon üìÖ
            .stat-value(id="todayBookings") 0
            .stat-label Today's Bookings
          .stat-card
            .stat-icon ‚è≥
            .stat-value(id="pendingBookings") 0
            .stat-label Pending Approvals
          .stat-card
            .stat-icon ‚úÖ
            .stat-value(id="completedBookings") 0
            .stat-label Completed Today
          .stat-card
            .stat-icon üí∞
            .stat-value(id="todayRevenue") $0
            .stat-label Today's Revenue
        
        .dashboard-content
          .dashboard-section
            .section-header
              h2 Today's Schedule
              a.btn-secondary(href="/views/pages/staff-bookings.html") View All Bookings
            .today-schedule
              .loading-indicator(id="scheduleLoading")
                p Loading today's schedule...
          
          .dashboard-section
            .section-header
              h2 Pending Approvals
              a.btn-secondary(href="/views/pages/staff-bookings.html?filter=pending") View All
            .pending-approvals
              .loading-indicator(id="pendingLoading")
                p Loading pending approvals...
          
          .dashboard-section
            .section-header
              h2 Restaurant Status
            .restaurant-status
              .status-item
                .status-indicator.open
                .status-content
                  h4 Restaurant is Open
                  p Currently accepting bookings
              .status-item
                .status-indicator.warning
                .status-content
                  h4 High Demand Period
                  p Consider increasing staff during peak hours
        
        .quick-actions
          h3 Quick Actions
          .action-grid
            .action-item
              a.btn-primary(href="/views/pages/staff-bookings.html") Manage Bookings
            .action-item
              a.btn-primary(href="/views/pages/staff-availability.html") Manage Availability
            .action-item
              a.btn-secondary(href="/views/pages/staff-reports.html") View Reports
            .action-item
              a.btn-secondary(href="/views/pages/customer-profile.html") My Profile
    
    include ../partials/footer
    
    script(src="/assets/js/config.js")
    script(src="/assets/js/utils/storage.js")
    script(src="/assets/js/utils/ui.js")
    script(src="/assets/js/utils/api.js")
    script(src="/assets/js/utils/auth.js")
    script(src="/assets/js/utils/access-control.js")
    script(src="/assets/js/main.js")
    script(src="/assets/js/staff-dashboard.js")
